<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User edit</h2>

  <%= form_with model: @user, url: user_path do |f| %>
    <div class="form_group mb-3">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control name" %>
    </div>

    <div class="form_group mb-3">
      <%= f.label :image %><br>
      <%= f.file_field :profile_image, class: "form-control-file user_image" %>
    </div>

    <div class="form_group mb-3">
      <%= f.label :introduction %><br>
      <%= f.text_area :introduction, class: "form-control introduction" %>
    </div>

    <div class="form_group mb-3">
      <%= f.submit 'Update User', class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>