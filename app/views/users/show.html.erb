<main>

  <p id="notice"><%= flash[:notice] %></p>

  <div class="container px-5 px-sm-0 mt-3">

    <div class="row">
      <div class="col-md-3">
        <%= render 'user', user: @user %>  <!-- /users/_user.html.erbを呼び込む -->
      </div>

      <div class="col-md-8 offset-md-1">

        <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @user.books.each do |post_book| %>
              <tr>
                <td>
                  <%= link_to user_path(post_book.user_id) do %>
                    <%= image_tag @user.get_profile_image(80, 80) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to post_book.title, book_path(post_book.id) %>
                </td>
                <td>
                  <%= post_book.body %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
