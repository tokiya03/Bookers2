<main>
  <div class="container px-5 px-sm-0 mt-3">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user', user: current_user, book: @book %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Groups</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>グループ名</th>
              <th>紹介文</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @groups.each do |group| %>
              <tr>
                <td>
                  <% if group.group_image.attached? %>
                    <%= image_tag group.group_image, size: "80x80" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "80x80" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to group.name, group_path(group.id) %>
                </td>
                <td>
                  <%= group.introduction %>
                </td>
                <% if group.owner_id == current_user.id %>
                  <td>
                    <%= link_to 'Edit', edit_group_path(group.id), class: "btn btn-success" %>
                  </td>
                <% else %>
                  <td></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
       </table>
      </div>
    </div>
  </div>
</main>
