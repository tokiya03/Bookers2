<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
      <h2>Create Group</h2>

      <%= form_with model: @group, url: groups_path, method: :post, local: true do |f| %>
        <div class="form_group mb-3">
          <%= f.label :グループ名 %><br />
          <%= f.text_field :name, class: "form-control name" %>
        </div>

        <div class="form_group mb-3">
          <%= f.label :紹介文 %><br />
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>

        <div class="form_group mb-3">
          <%= f.label :グループ画像 %><br />
          <%= f.file_field :group_image, class: "form-control-file", accept: "image/*" %>
        </div>

        <div class="form_group mb-3">
          <%= f.submit 'Create Group', class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
