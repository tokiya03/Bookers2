<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
      <h2>Event Mail</h2>

      <%= form_with model: @group, url: group_send_mail_path(@group), method: :get, local: true do |f| %>
        <div class="form_group mb-3">
          <%= f.label :title %><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form_group mb-3">
          <%= f.label :content %><br />
          <%= f.text_area :content, class: "form-control" %>
        </div>

        <div class="form_group mb-3 text-right">
          <%= f.submit '送信', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
